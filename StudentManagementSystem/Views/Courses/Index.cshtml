@model List<StudentManagementSystem.Models.Courses>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table">
    <thead>
        <tr style="background-color:deepskyblue">

            <th>Name</th>
            <th>Facuilty</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var courses in Model)
        {
            <tr>

                <td>@courses.Name </td>
                <td>@courses.facuilty.FacuiltyName</td>
                <td><a href="Courses/edit/@courses.Id"><button class="rounded-pill" style="background-color:limegreen">Edit</button></a></td>
                <td>
                    <form method="post" action="@Url.Action("Delete", "Courses", new { id = @courses.Id })">
                        <button type="submit" class="btn btn-default active rounded-pill" style="background-color: red;">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="Courses/add">Add Courses</a>
