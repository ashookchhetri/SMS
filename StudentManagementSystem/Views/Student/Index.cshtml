@{
}
<table class="table">
    <thead >
        <tr  style="background-color:deepskyblue"   >
            
            <th>Name</th>
            <th>Email</th>
            <th>phone No</th>
            <th>Faculty</th>
            <th>Image</th>
            <th>Action</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var students in Model)
        {
            <tr>
              
                <td>@students.Name </td>
                <td>@students.Email </td>
                <td>@students.phoneno </td>
                <td>@students.FacuiltyName</td>
                <td> <img src="/images/@Html.DisplayFor(modelitem => students.Imagepath)" style="width:100px; height:80px;"/> </td>

                <td><a href="Student/edit/@students.Id"><button class="rounded-pill" style="background-color:limegreen">Edit</button></a></td>
                <td>
                    <form method="post" action="@Url.Action("Delete", "Student", new { id = @students.Id })">
                        <button type="submit" class="btn btn-default active rounded-pill" style="background-color: red;">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
<a href="Student/add">Add Student</a>