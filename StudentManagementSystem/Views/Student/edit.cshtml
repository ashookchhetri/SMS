<h1>Edit Student</h1>
<form method="post" action="edit" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="" class="form-label">I.d</label>
        <input type="text" class="form-control" readonly asp-for="Id">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        @Html.ValidationMessageFor(model=>model.Name)
    </div>

    <div class="mb-3">
        <lable formaction="" class="form-lable">Email</lable>
        <input type="text" class="form-control" asp-for="Email"  />
        @Html.ValidationMessageFor(model=>model.Email)
    </div>
    <div class="mb-3">
        <lable formaction="" class="form-lable">Phone</lable>
        <input type="number" class="form-control" asp-for="phoneno" />
        @Html.ValidationMessageFor(model=>model.phoneno)
    </div>
    <div class="mb-3">
        <lable formaction="" class="form-lable">Facuilty</lable>
        <input type="text" class="form-control" asp-for="FacuiltyName" readonly />
        @Html.ValidationMessageFor(model => model.FacuiltyId)
    </div>
    <div class="mb-3">
        <label asp-for="photo" class="form-label">Image</label>
        <input type="file" class="form-control" asp-for="photo">
        
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
